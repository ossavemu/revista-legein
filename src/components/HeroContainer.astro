---
import lastPublication from '@/data/publication23.json' with { type: 'json' }
import type { Publications } from '@/lib/types'

const publications = lastPublication as Publications[]
---

<main
  class="grid lg:grid-cols-2 max-w-screen-xl m-auto items-center justify-center"
>
  <section class="m-20 grid gap-5 cursor-default md:max-w-[30vw]">
    <h1
      class="font-cormorant text-4xl md:text-6xl md:max-w-[40vw] leading-10 transition-all ease-in-out duration-300"
    >
      Revista de Estudiantes de Filosofía <span class="italic">Légein</span>
    </h1>

    <p>
      Revista profesional de filosofía dirigida por estudiantes de la <a
        href="https://www.univalle.edu.co/"
        class="dark:text-amber-500 text-amber-700 hover:text-red-800 dark:hover:text-red-400 transition-all ease-in-out duration-300"
        >Universidad del Valle, Cali Colombia.</a
      >
    </p><p>
      Un proyecto con ❤️ del <a
        href="https://filosofia.univalle.edu.co/"
        class="dark:text-amber-500 text-amber-700 hover:text-red-800 dark:hover:text-red-400 transition-all ease-in-out duration-300"
        >Departamento de Filosofía.</a
      >
    </p>
  </section>
  <section class="mt-10">
    <div
      class="grid bg-green-300 py-2 mx-10 font-cormorant text-center text-gray-900 border-2 border-neutral-400 max-w-[900vw] my-auto"
    >
      <h1 class="lg:text-3xl text-2xl font-semibold">
        {publications[0]?.publication}
      </h1>
      <hr class="border-1 border-gray-900 pb-4" />

      <div class="grid lg:grid-cols-2 gap-2">
        {
          publications.map((pub, index) => {
            if (index === 0) return
            return (
              <div class="flex flex-col gap-2 justify-center items-center pb-4">
                <h2 class="lg:text-xl font-bold text-base">{pub.title}</h2>
                <p class="lg:text-lg text-base">{pub.author}</p>
              </div>
            )
          })
        }
      </div>
    </div>
  </section>
</main>
