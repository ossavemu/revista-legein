---
import { Logo, Hamburger } from '@/components/icons/index.astro'
import ToggleTheme from '@/components/ToggleTheme.astro'
import { PATHS } from '@/constants/paths'
import type { Paths } from '@/lib/types'

const { pathname } = Astro.url

const isCurrentPageColor =
  'dark:text-amber-500 dark:hover:text-white text-amber-700 hover:text-gray-600'

const isCurrentPage = (path: Paths) => {
  return pathname === path
    ? isCurrentPageColor
    : 'dark:text-white dark:hover:text-amber-500 hover:text-amber-700 text-gray-600'
}
---

<nav
  class="border-gray-200 dark:border-gray-800 bg-[rgba(255,255,255,0.2)] dark:bg-[rgba(0,0,0,0.2)]"
>
  <div
    class="max-w-screen-lg flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <Logo />
    <div class="flex space-x-3 md:space-x-0 rtl:space-x-reverse">
      <Hamburger />
      <div
        class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1 font-semibold"
        id="navbar-cta"
      >
        <ul
          class="flex font-medium p-4 md:p-0 mt-4 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 dark:border-gray-700"
        >
          <li>
            <a
              href={PATHS.HOME}
              class={`block py-2 px-3 md:p-0 ${isCurrentPage(PATHS.HOME)}`}
              >Inicio</a
            >
          </li>
          <li>
            <a
              href={PATHS.ABOUT}
              class={`block py-2 px-3 md:p-0 ${isCurrentPage(PATHS.ABOUT)}`}
              >Sobre nosotros</a
            >
          </li>
          <li>
            <a
              href={PATHS.PUBLISH}
              class={`block py-2 px-3 md:p-0 ${isCurrentPage(PATHS.PUBLISH)}`}
              >Publica con nosotros</a
            >
          </li>
          <li>
            <a
              href={PATHS.LIBRARY}
              class={`block py-2 px-3 md:p-0 ${isCurrentPage(PATHS.LIBRARY)}`}
              >Biblioteca Legein</a
            >
          </li>
        </ul>
      </div>
    </div>
    <ToggleTheme />
  </div>

  <style is:global>
    nav button {
      @apply p-1;
    }
    nav button svg {
      @apply h-6 w-6 hover:fill-slate-600;
      @apply h-6 w-6;
    }
    #theme-btn {
      @apply p-3 sm:p-1;
    }
    #theme-btn svg {
      @apply scale-125 hover:rotate-12 sm:scale-100;
    }
  </style>
</nav>
