---
import Logo from './icons/Logo.astro';
import ToggleTheme from './ToggleTheme.astro';
---

<nav
  class='bg-white border-gray-200 dark:bg-gray-900 flex justify-center items-center gap-6 p-4 bg-opacity-80'
>
  <Logo />
  <button
    data-collapse-toggle='navbar-default'
    type='button'
    class='inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600'
    aria-controls='navbar-default'
    aria-expanded='false'
  >
    <span class='sr-only'>Men√∫ de opciones</span>
    <svg
      class='w-5 h-5'
      aria-hidden='true'
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 17 14'
    >
      <path
        stroke='currentColor'
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M1 1h15M1 7h15M1 13h15'></path>
    </svg>
  </button>
  <div class='hidden w-full md:block md:w-auto max-w-6xl' id='navbar-default'>
    <ul
      class='font-medium flex flex-col items-center p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700'
    >
      <li>
        <a
          href='/'
          class='block py-2 px-3 text-white bg-amber-700 rounded md:bg-transparent md:text-amber-700 md:p-0 dark:text-white md:dark:text-amber-500'
          aria-current='page'>Inicio</a
        >
      </li>
      <li>
        <a
          href='/about'
          class='block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-amber-700 md:p-0 dark:text-white md:dark:hover:text-amber-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'
          >Sobre nosotros</a
        >
      </li>
      <li>
        <a
          href='#'
          class='block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-amber-700 md:p-0 dark:text-white md:dark:hover:text-amber-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'
          >Publica con nosotros</a
        >
      </li>
      <li>
        <a
          href='#'
          class='block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-amber-700 md:p-0 dark:text-white md:dark:hover:text-amber-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'
          >Anteriores publicaciones</a
        >
      </li>
      <li><ToggleTheme /></li>
    </ul>
  </div>
</nav>

<style is:global>
  nav button {
    @apply p-1;
  }
  nav button svg {
    @apply h-6 w-6 hover:fill-slate-600;
    @apply h-6 w-6;
  }
  #theme-btn {
    @apply p-3 sm:p-1;
  }
  #theme-btn svg {
    @apply scale-125 hover:rotate-12 sm:scale-100;
  }
</style>
