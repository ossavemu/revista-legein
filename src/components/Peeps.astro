---
import type { Names } from '@/lib/types'
import peeps from '@/styles/peeps.module.css'

interface Props {
  name: Names
}

const { name } = Astro.props
---

<a class={peeps[name]} href={'#' + name} id={name} data-css-peeps
  ><style>
    :root {
      --peep-width: 130px;
      --peep-height: 115px;
    }
    a {
      --peep-hair-color: rgba(0, 0, 0, 0.9);
      --peep-skin-color: #ffffff;

      --peep-object-color: rgba(0, 0, 0, 0.9);
      --peep-clothes-color: #ffffff;

      @apply block w-[calc(var(--peep-width)*0.7)] h-[calc(var(--peep-height)*0.7)] md:w-[var(--peep-width)] md:h-[var(--peep-width)] bg-transparent;
    }
  </style>
</a>
